<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/novel_catalog_img"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:background="#EEEEEE" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/novel_catalog_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:lines="1"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/novel_catalog_progress"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="top|right"
                        android:paddingTop="3dp"
                        android:paddingRight="5dp"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/novel_catalog_author"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="苏武"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/novel_catalog_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="1小时56分"
                    android:paddingBottom="3dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ListView
                android:id="@+id/novel_catalog_chapter_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ListView
                android:id="@+id/novel_catalog_range_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:background="#424242"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/novel_catalog_prev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/novel_catalog_prev"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/novel_catalog_range"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/novel_catalog_range"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/novel_catalog_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/novel_catalog_next"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/novel_catalog_mask"
        android:orientation="vertical"
        android:background="#75757575"
        android:layout_weight = "0"
        android:layout_width="80dp"
        android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>