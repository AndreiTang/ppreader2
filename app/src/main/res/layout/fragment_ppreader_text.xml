<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBC49B"
    tools:context=".ui.fragment.PPReaderTextFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/novel_action_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/novel_text_title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/novel_text_battery"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right|center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/battery_60_50" />

            <TextClock
                android:id="@+id/novel_text_time"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:gravity="right|center_vertical"
                android:textColor="#757575"
                android:textSize="13sp" />


        </LinearLayout>



        <android.support.v4.view.ViewPager
            android:id="@+id/novel_text_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/novel_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:text="1/500"
            android:textColor="#757575"
            android:textSize="14sp">
        </TextView>

    </LinearLayout>

    <org.andrei.ppreader.ui.view.PPReaderControlPanel
        android:visibility="gone"
        android:id="@+id/novel_text_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <include
        android:visibility="gone"
        android:id="@+id/novel_text_catalog"
        layout="@layout/view_ppreader_catalog" />

</FrameLayout>